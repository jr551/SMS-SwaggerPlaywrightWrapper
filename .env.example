# Router connection
ROUTER_URL=http://your-router-ip
ROUTER_USER=admin
ROUTER_PASS=admin

# Server port
PORT=3324

# API key for authentication
API_KEY=changeme

# Database path (for Docker, use /app/data/smsauto.db)
DB_PATH=./smsauto.db

# Queue polling interval (ms) - 0 to disable polling (trigger on enqueue)
QUEUE_POLL_MS=0

# Inbox check interval when idle (ms) - default 120s
INBOX_CHECK_MS=120000

# Webhook URL for new inbox messages
# INBOX_WEBHOOK_URL=https://your-webhook-url.com/incoming-sms

# Hour (0-23 UTC) to clear outbox daily
OUTBOX_CLEAR_HOUR=3
